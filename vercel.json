{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["hkg1"],
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    },
    "app/api/cron/**/*.ts": {
      "maxDuration": 30
    },
    "app/api/init/**/*.ts": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/bilibili",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/cron/jianshu",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/cron/douban",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/cron/youtube",
      "schedule": "* * * * *"
    }
  ]
}

